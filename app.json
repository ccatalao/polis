{
  "expo": {
    "name": "Polis",
    "slug": "polis",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#3498db"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ccatalao.polis"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#3498db"
      },
      "package": "com.ccatalao.polis"
    },
    "web": {
      "favicon": "./web/pwa/favicon.png",
      "bundler": "metro",
      "output": "static",
      "publicPath": "./",
      "build": {
        "babel": {
          "include": ["@expo/vector-icons"]
        }
      },
      "themeColor": "#3498db",
      "backgroundColor": "#ffffff",
      "shortName": "Polis",
      "description": "Planeamento Urbano Informado",
      "lang": "pt",
      "scope": "/polis/",
      "startUrl": "/polis/",
      "display": "standalone",
      "orientation": "portrait",
      "icons": [
        {
          "src": "./web/pwa/favicon.png",
          "sizes": "64x64",
          "type": "image/png"
        },
        {
          "src": "./web/pwa/icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        },
        {
          "src": "./web/pwa/icon-512.png",
          "sizes": "512x512",
          "type": "image/png"
        },
        {
          "src": "./web/pwa/apple-touch-icon.png",
          "sizes": "180x180",
          "type": "image/png",
          "purpose": "apple-touch-icon"
        }
      ]
    },
    "plugins": [
      "expo-dev-client"
    ],
    "extra": {
      "eas": {
        "projectId": "eb8f69c3-76ee-4405-afce-e6a58bf5009a"
      },
      "router": {
        "disableStaticRendering": true
      }
    },
    "experiments": {
      "tsconfigPaths": true
    },
    "packagerOpts": {
      "config": "metro.config.js"
    }
  }
} 